<html>

<head>
  <title>Teracces next to you</title>
  <style>
    #map {
      height: 500px;
      width: 100%;
    }

    #listOfAllSpots {
      background-color: #829692;
      color: white;
    }
  </style>
</head>

<body>

  <h1>WhereCanIHang Today?</h1>
  <p>Find the terrace closest to you - in Berlin</p>


  {{!-- Google Map visual --}}
  <h3>My First Map</h3>
  <div id="map"></div>

  {{!-- Display all Spots --}}

  <div id="listOfAllSpots" class="container">
    <div class="row">
      {{!--
      <ul> --}} {{#each spots}}
        <div class="col-lg-4 col-md-6 col-sm-12 p-2">
          <div class="card text-center mx-auto" style="width: 18rem;">
            <div class="clip-image">
              <img class="card-img-top pt-3 mx-auto mt-auto" src="{{this.image_url}}" alt="Card image cap">
            </div>
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              {{!--
              <p class="card-text">{{ this.description }}</p> --}}
              <a href="{{this.url}}" class="btn btn-primary">Go check this out</a>
            </div>
          </div>
        </div>
        {{/each }} {{!-- </ul> --}}
    </div>
  </div>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key={{googleAPIKey}}">
  </script>
  <script type="text/javascript" src="../public/javascripts/script.js"></script> {{!--
  <script type="text/javascript" src="../public/javascripts/yelp-interface.js"></script> --}}
</body>

</html>